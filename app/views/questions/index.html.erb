<h2>Welcome to Question Overflow</h2>

<h5><%= link_to "Create a new question", new_question_path %></h5>

<h4>List of flows:</h4>
<ul>
  <% @questions.each do |question| %>
  <li>
    <%= link_to content_tag(:i,nil, :class=>"fa fa-thumbs-up"), upvote_question_path(question), :method => :post %>

   <%= link_to content_tag(:i,nil, :class=>"fa fa-thumbs-down"), downvote_question_path(question), :method => :post %>

  <%= link_to question.title, question_path(question) %>
  Total Votes: <%= link_to question.vote_count, question_path(question.id), :method => :put %>
  </li>
  <% end %>
</ul>
